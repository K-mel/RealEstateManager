<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="150dp"
    android:layout_height="150dp"
    android:layout_margin="2dp"
    app:cardUseCompatPadding="true">

    <ImageView
        android:id="@+id/fragment_detail_media_item_iv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:contentDescription="@string/media"
        tools:srcCompat="@sample/properties" />

    <ImageView
        android:id="@+id/fragment_detail_video_iv"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginStart="5dp"
        android:src="@drawable/ic_video"
        android:visibility="gone"
        android:contentDescription="@string/media" />

    <TextView
        android:id="@+id/fragment_detail_media_item_tv"
        style="@style/detailMediaText"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_gravity="center_horizontal|bottom"
        tools:text="@sample/properties.json/names/media_name/value" />
</androidx.cardview.widget.CardView>